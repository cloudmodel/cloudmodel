{
    "architecture": "<%= template.lxd_arch %>",
    "creation_date": <%= template.created_at.to_i %>,
    "properties": {
        "architecture": "<%= template.lxd_arch %>",
        "description": "<%= template.name %>",
        "name": "cloudmodel-<%= template.id %>-<%= template.os_version %>-<%= CloudModel.debian_name(template.os_version).gsub(" ", "").underscore %>-<%= template.arch %>",
        "os": "<%= template.os_version.split('-').first %>",
        "release": "<%= CloudModel.debian_name template.os_version %>",
        "variant": "<%= template.os_version.split('-').last %>"
    },
    "templates": {
        "/etc/hostname": {
            "template": "hostname.tpl",
            "when": [
                "create",
                "copy"
            ]
        },
        "/etc/hosts": {
            "template": "hosts.tpl",
            "when": [
                "create",
                "copy"
            ]
        }
    }
}