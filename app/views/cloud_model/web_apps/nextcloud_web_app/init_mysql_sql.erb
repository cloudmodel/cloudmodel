CREATE DATABASE IF NOT EXISTS <%= model.mysql_database %> CHARACTER SET utf8mb4 COLLATE utf8mb4_general_ci;
CREATE USER '<%= model.mysql_user %>'@'localhost' IDENTIFIED BY '<%= model.mysql_passwd %>';
GRANT ALL PRIVILEGES ON <%= model.mysql_database %>.* TO '<%= model.mysql_user %>'@'localhost';
FLUSH PRIVILEGES;

