#!/bin/bash
echo -en "\e[18t" # returns \e[8;??;??t
t=''
r=''
c=''
p=0
while test "$t" != t ; do
  read -s -n 1 t
  case "$t" in
    't')
    ;;
    ';')
      p=$(($p + 1))
      ;;
    * )
      case "$p" in
        '1' )
          r="$r$t"
          ;;
        '2' )
          c="$c$t"
      esac
  esac
done
echo "rows is $r, cols is $c"
 
stty rows "$r" cols "$c"