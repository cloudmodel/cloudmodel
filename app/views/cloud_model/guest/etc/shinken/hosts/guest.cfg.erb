define host{
        use                     generic-host<%= guest.shinken_services_append %>
        contact_groups		admins
        host_name               <%= guest.host.name %>.<%= guest.name %>
        parents                 <%= guest.host.name %>
        address                 <%= guest.private_address %>
#    _SNMPCOMMUNITY      $SNMPCOMMUNITYREAD$
    _SNMP_MSG_MAX_SIZE  65535

    _LOAD_WARN          2,2,2
    _LOAD_CRIT          3,3,3
    _STORAGE_WARN       90
    _STORAGE_CRIT       95
    _CPU_WARN           80
    _CPU_CRIT           90
    _MEMORY_WARN        80
    _MEMORY_CRIT        95
    _NTP_WARN           0.128
    _NTP_CRIT           1
    _NET_IFACES         eth0
    _NET_WARN           90,90,0,0,0,0
    _NET_CRIT           0,0,0,0,0,0

    _CHKLOG_CONF        $PLUGINSDIR$/logFiles_linux.conf
    _STORAGE_PATH       /
}