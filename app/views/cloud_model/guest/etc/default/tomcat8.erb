# Additional options to pass to the JVM.
# Example to set library path for tomcat-native:
#   JAVA_OPTS="-Djava.library.path=/usr/lib"
#
export JAVA_OPTS="<%= manifest[:properties].map{|k,v| "-D#{k}=#{worker.interpolate_value v}"} * ' '%> -Djava.awt.headless=true -Xms<%= model.heap_size %> -Xmx<%= model.heap_size %>"


# Additional packages to put on the default classpath.
# jakarta-jstl is needed for some of the examples.
# Note: The extra jars listed here will be visible to webapps.
# Example:
#   TOMCAT_EXTRA_JARS="jakarta-jstl,xerces-2"
#
#TOMCAT_EXTRA_JARS=""

# User/Group of this instance.
export CATALINA_USER=tomcat8
export CATALINA_GROUP=tomcat8

export CATALINA_PID=/run/tomcat8/pid
export CATALINA_HOME=/usr/share/tomcat8
export CATALINA_BASE=/var/lib/tomcat8
export CATALINA_TMPDIR=/var/tmp/tomcat8
export CATALINA_OPTS=""
