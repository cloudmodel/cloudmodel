storage:
    dbPath: "/var/lib/mongodb"

net:
    port: <%= model.port %>
    #bindIp: 127.0.0.1
    bindIp: 0.0.0.0
    ssl:
        mode: disabled
<%- if model.mongodb_replication_set -%>

setParameter:
   disableSplitHorizonIPCheck: true

replication:
   replSetName: <%= model.mongodb_replication_set.name %>
<%- end -%>